<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 定义所有的SQL语句的映射， 对于本实体而言相关的所有的SQL代码都在此定义 -->
<mapper namespace="com.yootk.ssm.dao.IActionDAO">   <!-- SSM整合的时候，这个命名空间异常重要 -->
    <select id="findByMember" parameterType="string" resultType="string">
        SELECT actid FROM action WHERE rid IN (
            SELECT rid FROM member_role WHERE mid=#{mid}
        )
    </select>
</mapper>